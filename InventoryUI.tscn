func add_item(item_texture: Texture):
	if inventory.size() < 5:
		inventory.append(item_texture)
		update_slots()

func update_slots():
	for i in range(5):
		var slot = $Panel/HBoxContainer.get_child(i)
		if i < inventory.size():
			slot.texture = inventory[i]
		else:
			slot.texture = null

